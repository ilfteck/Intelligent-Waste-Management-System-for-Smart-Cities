<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.MemberDao">

    <!-- Generic query result column -->
    <sql id="Base_Column_List">
        a.id as id
        ,a.username as username
        ,a.password as password
        ,a.member_name as memberName
        ,a.member_phone as memberPhone
        ,a.member_id_number as memberIdNumber
        ,a.member_photo as memberPhoto
        ,a.sex_types as sexTypes
        ,a.member_email as memberEmail
        ,a.create_time as createTime
    </sql>
    <select id="selectListView" parameterType="map" resultType="com.entity.view.MemberView" >
        SELECT
        <include refid="Base_Column_List" />
        <!-- Fields of the cascade table -->

        FROM member  a

        <where>
            <if test="params.ids != null">
                and a.id in
                <foreach item="item" index="index" collection="params.ids" open="(" separator="," close=")">
                #{item}
                </foreach>
            </if>
            <if test=" params.username != '' and params.username != null and params.username != 'null' ">
                and a.username like CONCAT('%',#{params.username},'%')
            </if>
            <if test=" params.password != '' and params.password != null and params.password != 'null' ">
                and a.password like CONCAT('%',#{params.password},'%')
            </if>
            <if test=" params.memberName != '' and params.memberName != null and params.memberName != 'null' ">
                and a.member_name like CONCAT('%',#{params.memberName},'%')
            </if>
            <if test=" params.memberPhone != '' and params.memberPhone != null and params.memberPhone != 'null' ">
                and a.member_phone like CONCAT('%',#{params.memberPhone},'%')
            </if>
            <if test=" params.memberIdNumber != '' and params.memberIdNumber != null and params.memberIdNumber != 'null' ">
                and a.member_id_number like CONCAT('%',#{params.memberIdNumber},'%')
            </if>
            <if test="params.sexTypes != null and params.sexTypes != ''">
                and a.sex_types = #{params.sexTypes}
            </if>
            <if test=" params.memberEmail != '' and params.memberEmail != null and params.memberEmail != 'null' ">
                and a.member_email like CONCAT('%',#{params.memberEmail},'%')
            </if>

        </where>
        order by a.${params.sort} ${params.order}
    </select>

</mapper>
